			Read:
				O__M(self, 9);
				new_line;
				previous_style = Util.set_text_style(TEXT_STYLE_STRESSED);
				O__M(self, 10);
				Util.set_text_style(previous_style);
				new_line;
				return true;
		],
 has	concealed male;

