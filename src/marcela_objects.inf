Array descriptionFlags -> 2; ! hasta 8 flags
Room	Campo "Al pie de una peña"
 with	name_f 'campina' 'campo' 'dehesea' 'pradera' 'praderia' 'sierra',
		name_m 'prado',
		gender G_MASCULINO,
		description [;
			!! Primera descripción:
			if (self.state == 0) {
				StartDaemon(self);
				self.state++;
				O__M(Ambrosio, 1);
				new_line;
				O__M(self, 1);
				new_line;
				O__M(Ambrosio, 2);
				new_line;
				O__M(Ambrosio, 3);
				new_line;
				O__M(Ambrosio, 4);
				return true;
			}
			!! Antes de la aparición de Marcela:
			if (self.state <= 8) {
					O__M(self, 2);
					if (Grisostomo.nombre_conocido) O__M(self, 4);
					else O__M(self, 3);
					O__M(self, 5);
					new_line;
					O__M(self, 6);
					return true;
			}
			!! Discurso de Marcela:
			if (self.state <= 14) {
				switch (Shuffle(3, descriptionFlags)) {
					1:	return O__M(self, 7);
					2:	return O__M(self, 8);
					3:	return O__M(self, 9);
				}
			}
			!! Tras la partida de Marcela:
			!! FIXME
			"Descripción de la localidad.";
		],
		react_before [;
			CSETSelected:
				return false;
			default:
				if (DecisionFinal.bloqueada) {
					return true;
				}
		],
		daemon [ previous_style;
			switch (self.state) {

				2:
					DecisionFinal.bloqueada = true;
					ChoiceSetManager.start(DecisionFinal);
					return true;

				!! Intervención de Ambrosio:
				3:
					Grisostomo.nombre_conocido = true;
					new_line;
					O__M(Ambrosio, 6);
				5:
					new_line;
					O__M(Ambrosio, 7);
					!! StopDaemon(self); ! FIXME
				8:
					move Marcela to self;
					new_line;
					O__M(Marcela, 1);
				9:
					new_line;
					O__M(Ambrosio, 8);
				!! Intervención de Marcela:
				10:
					new_line;
					O__M(Marcela, 3);
				12:
					new_line;
					O__M(Marcela, 4);
					new_line;
					O__M(Marcela, 5);
				13:
					new_line;
					O__M(Marcela, 7);
				14:
					!! Marcela se va
					new_line;
					O__M(Marcela, 8);
					new_line;
					O__M(Marcela, 9);
				!! Reacción de Ambrosio:
				15:
					new_line;
					O__M(Personas, 6);
				16:
					new_line;
					O__M(Ambrosio, 9);
					DecisionFinal.bloqueada = true;
					ChoiceSetManager.start(DecisionFinal);
				17:
					StopDaemon(self);
					new_line;
					O__M(Quijote, 2);
					new_line;
					O__M(Quijote, 3);
					Util.fade_in(MUS_SOUNDTRACK, 20, 1000, true);
					Util.press_any_key();
					new_line;
					O__M(Quijote, 4);
					O__M(Quijote, 5);
					new_line;
					previous_style = Util.set_text_style(TEXT_STYLE_STRESSED);
					O__M(Sepultura, 3);
					Util.set_text_style(previous_style);
					new_line;
					O__M(Quijote, 6);
					Util.fade_in(MUS_SOUNDTRACK, 60, 1000, true);
					Util.press_any_key();
					new_line;
					Util.horizontal_rule();
					new_line;
					O__M(Quijote, 10);
					Util.fade_in(MUS_SOUNDTRACK, 100, 1000, true);
					Util.press_any_key();
					new_line;
					print (header) "FIN^";
					Util.press_any_key();
					new_line;
					print (parser) "Pulsa cualquier tecla para terminar";
					Util.press_any_key();
					@restart;
			}
			self.state++;
			return true;
		],
 has	male;

NPC		-> Ambrosio "Ambrosio"
 with	name_m 'ambrosio' 'cabrero' 'ganadero' 'hombre' 'muchacho' 'ovejero'
			'pastor' 'zagal',
		gender G_MASCULINO,
		description [;
			return O__M(self, 5);
		],
		before [
			previous_style;
			DefaultAction:
				if (self has described) {
					if (self.state > 0) <<Examine self>>;
					self.state++;
					previous_style = Util.set_text_style(TEXT_STYLE_PARSER);
					print (string) TEXT_STYLE_PARSER_PREFIX;
					print "habla con ", (name) self;
					print (string) TEXT_STYLE_PARSER_SUFIX;
					Util.set_text_style(previous_style);
					new_line;
					<<TalkTo self>>;
				}
			TalkTo:
				if (Marcela in Campo) <<TalkTo Personas>>;
				else return O__M(self, 10);
		],
 has	concealed male proper;

